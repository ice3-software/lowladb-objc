def import_pods
  pod 'lowladb-objc', :path => '../'

  pod 'Specta', '~> 0.2.1'
  pod 'Expecta'

  pod 'liblowladb', :path => "../../liblowladb"
end

target :ios do
  platform :ios, '7.0'
  link_with 'iOS Tests'
  import_pods
end

target :osx do
  platform :osx, '10.9'
  link_with 'OS X Tests'
  import_pods
end
